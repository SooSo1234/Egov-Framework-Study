<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="BoardSpace">

	<typeAlias  alias="egovMap" type="org.egovframe.rte.psl.dataaccess.util.EgovMap"/>
	<typeAlias  alias="boardVO" type="egovframework.main.service.BoardVO"/>

	<insert id="boardVO.insertBoard">
		insert into board(unq, title, pass, name, content, hits, rdate) values(#unq#,#titme#,#pass#,#name#,#content#,#hits#,#rdate#)
	</insert>

	<select id="boardVO.selectBoardList" resultClass="egovMap">
		select code, gid, name from codes order by gid asc
	</select>

	<select id="boardVO.selectBoardDetail" resultClass="boardVO">
		select code, gid, name from codes where code=#code#
	</select>
	
	<select id="boardVO.selectBoardCount" resultClass="int">
		select count(*) cnt from codes
	</select>
	
	<update id="boardVO.updateBoardModify">
		update codes set gid=#gid#, name=#name# where code=#code#
	</update>

	<delete id="boardVO.deleteBoard">
		delete from codes where code=#code#
	</delete>

</sqlMap>
